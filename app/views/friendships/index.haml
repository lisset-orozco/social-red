.row.center-xs
  =grid xs:10,md:8 do
    .white.large-padding
      .border-bottom.padding-bottom
        %p.text-left Amistades pendientes
        =render @pending_friendships
      .top-space.border-bottom.padding-bottom
        %p.text-left Amistades aceptadas
        =render @accepted_friendships
      .top-space.border-bottom.padding-bottom
        %p.text-left Amistades rechazadas
        =render @rejected_friendships
      .top-space
        %p.text-left Mis solicitudes pendientes
        =render @pending_requests